<article>
  <a href="/dashboard"> &larr; Back to dashboard</a>
  <h2>
    Edit Post
  </h2>
  <form class="edit-post-form card">
    <div class="card-header"></div>
    <div class="card-detail">
     <p> 
      <label for="post-title">Title</label>
      <input name="post-title" id="post-title" type="text" value="{{post.title}}" />
    </p>
    <p> 
      <label for="content">Content</label>
      <textarea id="content" name="content" >{{post.content}}</textarea>
    </p>
      <p>
      {{#if post.comments.length}}
          <a href="/post/{{post.id}}">{{post.comments.length}} {{format_plural "comment" post.comments.length}}</a>
      {{/if}}
    </p><p>
    <button type="submit" class="btn">Update Post</button>
    <button type="button" class="delete-post-btn btn ">Delete</button>
    </p>
    </div>
    
  </form>
  </article>


{{> comments post.comments}}

<script src="/javascript/edit-post.js"></script>
<script src="/javascript/delete-post.js"></script>
